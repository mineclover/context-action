{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "noEmit": true,
    "types": ["react", "node", "jest", "@testing-library/jest-dom"],
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "jsx": "react-jsx",
    "rootDir": "."
  },
  "include": [
    "src/**/*",
    "__tests__/**/*",
    "**/*.test.*",
    "**/*.spec.*"
  ],
  "exclude": [
    "dist",
    "node_modules"
  ]
}
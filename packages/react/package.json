{
  "name": "@context-action/react",
  "version": "0.0.5",
  "type": "module",
  "description": "React integration for @context-action/core - Context and hooks for type-safe action management",
  "main": "dist/index.cjs",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.js"
      },
      "require": {
        "types": "./dist/index.d.cts",
        "default": "./dist/index.cjs"
      }
    }
  },
  "files": [
    "dist",
    "README.md",
    "README.ko.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "tsdown",
    "build:watch": "tsdown --watch",
    "test": "jest --passWithNoTests",
    "test:watch": "jest --watch",
    "lint": "eslint src --ext .ts,.tsx",
    "lint:fix": "eslint src --ext .ts,.tsx --fix",
    "type-check": "tsc --noEmit",
    "clean": "rimraf dist",
    "prepublishOnly": "pnpm run build"
  },
  "keywords": [
    "typescript",
    "react",
    "action",
    "pipeline",
    "state-management",
    "context",
    "hooks"
  ],
  "author": "mineclover",
  "license": "Apache-2.0",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/mineclover/context-action.git",
    "directory": "packages/react"
  },
  "bugs": {
    "url": "https://github.com/mineclover/context-action/issues"
  },
  "homepage": "https://github.com/mineclover/context-action#readme",
  "peerDependencies": {
    "react": ">=16.8.0"
  },
  "dependencies": {
    "@context-action/core": "workspace:*",
    "@context-action/logger": "workspace:*"
  },
  "devDependencies": {
    "@types/jest": "^29.5.0",
    "@types/node": "^20.19.10",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "eslint": "^8.0.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "jest": "^29.0.0",
    "react": "^18.3.1",
    "rimraf": "^5.0.0",
    "rollup-plugin-visualizer": "6.0.3",
    "ts-jest": "^29.0.0",
    "tsdown": "^0.13.0",
    "tslib": "^2.8.1",
    "typescript": "^5.3.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}

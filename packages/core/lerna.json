{
  "$schema": "node_modules/lerna/schemas/lerna-schema.json",
  "version": "0.1.0",
  "npmClient": "pnpm",
  "packages": [
    "packages/*"
  ],
  "command": {
    "publish": {
      "message": "chore(release): publish %s",
      "registry": "https://registry.npmjs.org"
    },
    "version": {
      "allowBranch": ["main", "develop"],
      "conventionalCommits": true,
      "message": "chore(release): version %s"
    }
  }
}

# Context-Action Core Logging Configuration
# Copy this file to .env and configure for your environment

# ==============================================
# QUICK SETUP - Choose one of the following:
# ==============================================

# Option 1: Full trace logging (most detailed)
CONTEXT_ACTION_TRACE=false

# Option 2: Debug mode with additional context
CONTEXT_ACTION_DEBUG=false

# Option 3: Specific log level (overrides above options)
# CONTEXT_ACTION_LOG_LEVEL=ERROR

# ==============================================
# DETAILED CONFIGURATION
# ==============================================

# Log Levels: TRACE, DEBUG, INFO, WARN, ERROR, NONE
# TRACE: Most detailed - shows all internal operations
# DEBUG: Debug information and important events
# INFO: General information  
# WARN: Warnings and potential issues
# ERROR: Errors only (default)
# NONE: No logging
CONTEXT_ACTION_LOG_LEVEL=ERROR

# Custom logger name (useful for multiple instances)
CONTEXT_ACTION_LOGGER_NAME=ActionRegister

# Enable debug mode (additional logging context)
CONTEXT_ACTION_DEBUG=false

# Environment-based auto-configuration
# NODE_ENV=development automatically enables DEBUG level
# NODE_ENV=production automatically uses ERROR level
# NODE_ENV=development

# ==============================================
# COMMON CONFIGURATIONS
# ==============================================

# Development (verbose logging)
# NODE_ENV=development
# CONTEXT_ACTION_TRACE=true
# CONTEXT_ACTION_DEBUG=true
# CONTEXT_ACTION_LOGGER_NAME=DevApp

# Production (errors only)
# NODE_ENV=production
# CONTEXT_ACTION_LOG_LEVEL=ERROR
# CONTEXT_ACTION_DEBUG=false
# CONTEXT_ACTION_LOGGER_NAME=ProdApp

# Debugging specific issues
# CONTEXT_ACTION_LOG_LEVEL=DEBUG
# CONTEXT_ACTION_DEBUG=true
# CONTEXT_ACTION_LOGGER_NAME=DebugSession

# Testing environment
# NODE_ENV=test
# CONTEXT_ACTION_LOG_LEVEL=WARN
# CONTEXT_ACTION_DEBUG=false
# CONTEXT_ACTION_LOGGER_NAME=TestRunner
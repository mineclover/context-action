{
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["ES2020", "DOM"],
    "module": "CommonJS",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "skipLibCheck": true,
    "noEmit": true,
    "types": ["jest", "node"],
    "baseUrl": "..",
    "paths": {
      "@context-action/core": ["src/index"],
      "@context-action/core/*": ["src/*"]
    }
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    "../src/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}
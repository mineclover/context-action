{
  "name": "@context-action/typedoc-vitepress-sync",
  "version": "1.0.0",
  "description": "Enhanced TypeDoc to VitePress documentation sync with smart caching, parallel processing, and quality validation",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "typedoc-vitepress-sync": "./bin/cli.js"
  },
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./cli": {
      "import": "./bin/cli.js"
    }
  },
  "files": [
    "dist",
    "bin",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "tsdown",
    "build:watch": "tsdown --watch",
    "dev": "tsdown --watch",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "type-check": "tsc --noEmit",
    "clean": "rm -rf dist",
    "prepublishOnly": "pnpm build && pnpm test",
    "example:basic": "node examples/basic-usage/index.js",
    "example:advanced": "node examples/advanced-config/index.js"
  },
  "keywords": [
    "typedoc",
    "vitepress",
    "documentation",
    "sync",
    "api-docs",
    "markdown",
    "cache",
    "parallel",
    "typescript",
    "docs-generation"
  ],
  "author": "mineclover",
  "license": "MIT",
  "homepage": "https://github.com/mineclover/context-action/tree/main/packages/typedoc-vitepress-sync",
  "repository": {
    "type": "git",
    "url": "https://github.com/mineclover/context-action.git",
    "directory": "packages/typedoc-vitepress-sync"
  },
  "bugs": {
    "url": "https://github.com/mineclover/context-action/issues"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "peerDependencies": {
    "typedoc": ">=0.25.0",
    "vitepress": ">=1.0.0"
  },
  "peerDependenciesMeta": {
    "typedoc": {
      "optional": false
    },
    "vitepress": {
      "optional": false
    }
  },
  "dependencies": {
    "chalk": "^5.3.0",
    "commander": "^12.0.0",
    "ora": "^8.0.1",
    "picocolors": "^1.1.1"
  },
  "devDependencies": {
    "@types/jest": "^29.5.12",
    "@types/node": "^20.11.0",
    "eslint": "^9.0.0",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.0",
    "tsdown": "^0.14.1",
    "typedoc": "^0.28.8",
    "typescript": "^5.3.0",
    "vitepress": "^1.6.3"
  }
}
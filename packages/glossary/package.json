{
  "name": "@context-action/glossary",
  "version": "0.0.4",
  "type": "module",
  "private": true,
  "description": "Glossary mapping system for Context-Action framework using standard JSDoc",
  "main": "dist/index.js",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.js"
      }
    }
  },
  "files": [
    "dist",
    "bin",
    "README.md",
    "LICENSE"
  ],
  "bin": {
    "glossary": "./bin/glossary-cli.js"
  },
  "scripts": {
    "build": "tsdown",
    "build:watch": "tsdown --watch",
    "test": "jest --passWithNoTests",
    "test:watch": "jest --watch",
    "lint": "echo 'Linting skipped for @context-action/glossary (no ESLint config)'",
    "lint:fix": "echo 'Linting skipped for @context-action/glossary (no ESLint config)'",
    "type-check": "tsc --noEmit",
    "clean": "rimraf dist",
    "prepublishOnly": "pnpm run build"
  },
  "keywords": [
    "context-action",
    "glossary",
    "jsdoc",
    "documentation",
    "mapping",
    "parser"
  ],
  "author": "mineclover",
  "license": "Apache-2.0",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/mineclover/context-action.git",
    "directory": "packages/glossary"
  },
  "bugs": {
    "url": "https://github.com/mineclover/context-action/issues"
  },
  "homepage": "https://github.com/mineclover/context-action#readme",
  "dependencies": {
    "commander": "^12.0.0",
    "comment-parser": "^1.4.1",
    "glob": "^10.0.0",
    "gray-matter": "^4.0.3"
  },
  "peerDependencies": {
    "@context-action/core": "workspace:*"
  },
  "devDependencies": {
    "@types/jest": "^29.5.0",
    "@types/node": "^20.0.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "eslint": "^8.0.0",
    "jest": "^29.0.0",
    "rimraf": "^5.0.0",
    "ts-jest": "^29.0.0",
    "tsdown": "^0.13.0",
    "tslib": "^2.8.1",
    "typescript": "^5.3.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}

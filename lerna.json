{
  "$schema": "node_modules/lerna/schemas/lerna-schema.json",
  "version": "0.2.0",
  "npmClient": "pnpm",
  "packages": [
    "packages/core",
    "packages/react",
    "packages/llms-generator"
  ],
  "command": {
    "version": {
      "allowBranch": [
        "main",
        "master"
      ],
      "conventionalCommits": true,
      "message": "chore(release): publish %v",
      "push": true
    },
    "publish": {
      "npmClient": "pnpm",
      "registry": "https://registry.npmjs.org/",
      "verifyAccess": false
    },
    "bootstrap": {
      "npmClientArgs": [
        "--frozen-lockfile"
      ]
    },
    "run": {
      "stream": true
    }
  },
  "ignoreChanges": [
    "**/*.md",
    "**/test/**",
    "**/__tests__/**",
    "**/*.test.ts",
    "**/*.test.tsx"
  ]
}
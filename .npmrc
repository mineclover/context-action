# pnpm configuration for Lerna integration
# https://lerna.js.org/docs/recipes/using-pnpm-with-lerna

# Use pnpm's workspace protocol for local dependencies
link-workspace-packages=true

# Save exact versions of dependencies
save-exact=true

# Ensure pnpm doesn't hoist packages to avoid issues with Lerna
hoist=false

# Enable strict peer dependencies
strict-peer-dependencies=true

# Auto-install peers
auto-install-peers=true

# Ignore workspace root check warning
ignore-workspace-root-check=true
{
  "name": "context-action-monorepo",
  "version": "1.0.1",
  "type": "module",
  "private": true,
  "description": "Monorepo for context-action library and test environment",
  "scripts": {
    "build": "lerna run build",
    "build:core": "lerna run build --scope=@context-action/core",
    "build:react": "lerna run build --scope=@context-action/react",
    "build:llms-generator": "lerna run build --scope=@context-action/llms-generator",
    "build:typedoc-sync": "lerna run build --scope=@context-action/typedoc-vitepress-sync",
    "dev": "cd example && pnpm dev",
    "example:dev": "cd example && pnpm dev",
    "example:build": "cd example && pnpm build",
    "test": "lerna run test",
    "test:core": "lerna run test --scope=@context-action/core",
    "test:react": "lerna run test --scope=@context-action/react",
    "test:llms-generator": "lerna run test --scope=@context-action/llms-generator",
    "test:typedoc-sync": "lerna run test --scope=@context-action/typedoc-vitepress-sync",
    "lint": "lerna run lint",
    "type-check": "lerna run type-check",
    "clean": "lerna run clean",
    "version": "lerna version",
    "version:patch": "lerna version patch",
    "version:minor": "lerna version minor",
    "version:major": "lerna version major",
    "prerelease": "lerna run build && lerna run lint && lerna run type-check",
    "release": "lerna publish from-package",
    "release:patch": "lerna version patch && pnpm release",
    "release:minor": "lerna version minor && pnpm release",
    "release:major": "lerna version major && pnpm release",
    "changed": "lerna changed",
    "diff": "lerna diff",
    "postrelease": "git push origin main --tags",
    "docs:dev": "vitepress dev docs",
    "docs:build": "vitepress build docs",
    "docs:preview": "vitepress preview docs",
    "docs:api": "typedoc",
    "docs:sync": "npx @context-action/typedoc-vitepress-sync sync --config ./typedoc-vitepress-sync.config.js",
    "llms": "node packages/llms-generator/dist/cli/index.js",
    "llms:generator": "node packages/llms-generator/dist/cli/index.js",
    "llms:minimum": "node packages/llms-generator/dist/cli/index.js minimum",
    "llms:origin": "node packages/llms-generator/dist/cli/index.js origin",
    "llms:chars": "node packages/llms-generator/dist/cli/index.js chars",
    "llms:batch": "node packages/llms-generator/dist/cli/index.js batch",
    "llms:docs": "node packages/llms-generator/dist/cli/index.js markdown-all --lang=en,ko --overwrite",
    "llms:docs:en": "node packages/llms-generator/dist/cli/index.js markdown-generate en --overwrite",
    "llms:docs:ko": "node packages/llms-generator/dist/cli/index.js markdown-generate ko --overwrite",
    "priority": "node packages/llms-generator/dist/cli/index.js priority-stats",
    "docs": "node scripts/docs-cli.js",
    "docs:full": "pnpm docs:api && pnpm docs:sync && pnpm llms:minimum && pnpm docs:build",
    "docs:deploy": "lerna run build && pnpm docs:build",
    "check:size": "node scripts/check-bundle-size.js",
    "build:check": "lerna run build && pnpm check:size",
    "security:audit": "pnpm audit --audit-level high",
    "security:audit:all": "lerna run security:audit",
    "security:outdated": "pnpm outdated",
    "security:check": "pnpm security:audit && pnpm security:outdated",
    "ci:check": "lerna run lint && lerna run type-check && lerna run test && pnpm build:check",
    "ci:security": "pnpm security:check && lerna run security:audit"
  },
  "devDependencies": {
    "@eslint/js": "9.33.0",
    "@tailwindcss/typography": "0.5.16",
    "@types/node": "^24.3.0",
    "@types/react": "18.3.23",
    "@typescript-eslint/eslint-plugin": "^8.39.1",
    "@typescript-eslint/parser": "^8.39.1",
    "ajv": "8.17.1",
    "ajv-formats": "3.0.1",
    "ansis": "4.1.0",
    "autoprefixer": "10.4.21",
    "comment-parser": "^1.4.1",
    "eslint": "^9.33.0",
    "lerna": "^8.2.3",
    "mermaid": "^11.9.0",
    "postcss": "8.5.6",
    "shiki": "^3.8.1",
    "tailwindcss": "4.1.12",
    "typedoc": "^0.28.8",
    "typedoc-plugin-markdown": "^4.7.1",
    "typescript": "^5.3.0",
    "vitepress": "^1.6.3"
  },
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=9.0.0"
  },
  "pnpm": {
    "overrides": {
      "esbuild@<=0.24.2": ">=0.25.0",
      "@types/react": "18.3.23"
    },
    "ignoredBuiltDependencies": [
      "esbuild",
      "nx"
    ]
  },
  "author": "mineclover",
  "license": "MIT"
}

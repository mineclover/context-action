{
  "name": "context-action-monorepo",
  "version": "1.0.0",
  "type": "module",
  "private": true,
  "description": "Monorepo for context-action library and test environment",
  "scripts": {
    "build": "lerna run build",
    "build:core": "lerna run build --scope=@context-action/core",
    "build:logger": "lerna run build --scope=@context-action/logger",
    "build:react": "lerna run build --scope=@context-action/react",
    "build:jotai": "lerna run build --scope=@context-action/jotai",
    "build:glossary": "lerna run build --scope=@context-action/glossary",
    "dev": "cd example && pnpm dev",
    "example:dev": "cd example && pnpm dev",
    "example:build": "cd example && pnpm build",
    "test": "lerna run test",
    "test:core": "lerna run test --scope=@context-action/core",
    "test:logger": "lerna run test --scope=@context-action/logger",
    "test:react": "lerna run test --scope=@context-action/react",
    "test:jotai": "lerna run test --scope=@context-action/jotai",
    "test:glossary": "lerna run test --scope=@context-action/glossary",
    "lint": "lerna run lint",
    "type-check": "lerna run type-check",
    "clean": "lerna run clean",
    "version": "lerna version",
    "version:patch": "lerna version patch",
    "version:minor": "lerna version minor", 
    "version:major": "lerna version major",
    "prerelease": "lerna run build && lerna run lint && lerna run type-check",
    "release": "lerna publish from-package",
    "release:patch": "lerna version patch && pnpm release",
    "release:minor": "lerna version minor && pnpm release",
    "release:major": "lerna version major && pnpm release",
    "changed": "lerna changed",
    "diff": "lerna diff",
    "glossary:build": "lerna run build --scope=@context-action/glossary",
    "glossary:scan": "cd glossary/tools && node glossary-scanner.js",
    "glossary:validate": "cd glossary/tools && node glossary-validator.js",
    "glossary:missing": "cd glossary/tools && node missing-analysis.js",
    "glossary:dashboard": "cd glossary/tools && node implementation-dashboard.js",
    "glossary:update": "pnpm glossary:scan && pnpm glossary:validate && pnpm glossary:missing && pnpm glossary:dashboard",
    "postrelease": "git push origin main --tags",
    "docs:dev": "vitepress dev docs",
    "docs:build": "vitepress build docs", 
    "docs:preview": "vitepress preview docs",
    "docs:api": "typedoc",
    "docs:sync": "node scripts/sync-api-docs.js",
    "docs:full": "pnpm docs:api && pnpm docs:sync && pnpm docs:build",
    "docs:deploy": "lerna run build && pnpm docs:build",
    "check:size": "node scripts/check-bundle-size.js",
    "build:check": "lerna run build && pnpm check:size",
    "ci:check": "lerna run lint && lerna run type-check && lerna run test && pnpm build:check",
    "glossary:check": "pnpm glossary:validate"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "comment-parser": "^1.4.1",
    "lerna": "^8.2.3",
    "mermaid": "^11.9.0",
    "shiki": "^3.8.1",
    "typedoc": "^0.28.8",
    "typedoc-plugin-markdown": "^4.7.1",
    "typescript": "^5.3.0",
    "vitepress": "^1.6.3"
  },
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=9.0.0"
  },
  "author": "mineclover",
  "license": "MIT"
}

{
  "name": "context-action-monorepo",
  "version": "1.0.0",
  "type": "module",
  "private": true,
  "description": "Monorepo for context-action library and test environment",
  "scripts": {
    "build:core": "pnpm --filter @context-action/core build",
    "build:react": "pnpm --filter @context-action/react build",
    "build:jotai": "pnpm --filter @context-action/jotai build",
    "build:glossary": "pnpm --filter @context-action/glossary build",
    "build:all": "pnpm -r --filter '@context-action/*' build",
    "dev": "cd example && pnpm dev",
    "example:dev": "cd example && pnpm dev",
    "example:build": "cd example && pnpm build",
    "test:core": "pnpm --filter @context-action/core test",
    "test:react": "pnpm --filter @context-action/react test",
    "test:jotai": "pnpm --filter @context-action/jotai test",
    "test:glossary": "pnpm --filter @context-action/glossary test",
    "test:all": "pnpm -r --filter '@context-action/*' test",
    "lint": "pnpm -r lint",
    "type-check": "pnpm -r type-check",
    "clean": "pnpm -r clean",
    "version:patch": "pnpm -r --filter '@context-action/*' exec npm version patch",
    "version:minor": "pnpm -r --filter '@context-action/*' exec npm version minor",
    "version:major": "pnpm -r --filter '@context-action/*' exec npm version major",
    "prerelease": "pnpm build:all && pnpm lint && pnpm type-check",
    "release:patch": "pnpm version:patch && pnpm prerelease && pnpm publish:all",
    "release:minor": "pnpm version:minor && pnpm prerelease && pnpm publish:all",
    "release:major": "pnpm version:major && pnpm prerelease && pnpm publish:all",
    "glossary:build": "pnpm --filter @context-action/glossary build",
    "glossary:scan": "cd glossary/tools && node glossary-scanner-v2.js",
    "glossary:validate": "cd glossary/tools && node glossary-validator-v2.js",
    "glossary:missing": "cd glossary/tools && node missing-analysis.js",
    "glossary:dashboard": "cd glossary/tools && node implementation-dashboard.js",
    "glossary:update": "pnpm glossary:scan && pnpm glossary:validate && pnpm glossary:missing && pnpm glossary:dashboard",
    "publish:all": "pnpm --filter @context-action/core publish --access public && pnpm --filter @context-action/react publish --access public && pnpm --filter @context-action/jotai publish --access public && pnpm --filter @context-action/glossary publish --access public",
    "publish:core": "pnpm --filter @context-action/core publish --access public",
    "publish:react": "pnpm --filter @context-action/react publish --access public",
    "publish:jotai": "pnpm --filter @context-action/jotai publish --access public",
    "publish:glossary": "pnpm --filter @context-action/glossary publish --access public",
    "postrelease": "git push origin main --tags",
    "docs:dev": "vitepress dev docs",
    "docs:build": "vitepress build docs",
    "docs:preview": "vitepress preview docs",
    "docs:api": "typedoc",
    "docs:full": "pnpm docs:api && pnpm docs:build",
    "docs:deploy": "pnpm build:all && pnpm docs:build",
    "check:size": "node scripts/check-bundle-size.js",
    "build:check": "pnpm build:all && pnpm check:size",
    "ci:check": "pnpm lint && pnpm type-check && pnpm test:all && pnpm build:check",
    "glossary:check": "pnpm glossary:validate"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "comment-parser": "^1.4.1",
    "mermaid": "^11.9.0",
    "shiki": "^3.8.1",
    "typedoc": "^0.28.8",
    "typedoc-plugin-markdown": "^4.7.1",
    "typescript": "^5.3.0",
    "vitepress": "^1.6.3"
  },
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=9.0.0"
  },
  "author": "mineclover",
  "license": "MIT"
}
